#!/bin/sh

CURRENT=`pwd`

APP_NAME="photofilmstrip"
VERSION="0.70"
FOLDER="temp/$APP_NAME-$VERSION"

rm -R temp
mkdir -p "$FOLDER"

cd ../src
find . -name *.py -print | cpio -pd "../build/$FOLDER"
cd ../build

#svn co https://sg-dev.de/svn/stuff/PhotostoryWS/trunk/src $FOLDER
#rm -rf `find $FOLDER -name .svn -type d`

cp photostoryx $FOLDER

cd temp
tar -czf "$APP_NAME-$VERSION.tar.gz" .
cd ..

cp photofilmstrip.xpm $FOLDER
cp debian/photofilmstrip.desktop $FOLDER

cd $FOLDER

dh_make -e "jens@sg-dev.de" -c gpl -s -f "../$APP_NAME-$VERSION.tar.gz"

rm debian/*.ex
rm debian/*.EX

cd $CURRENT

cp debian/* $FOLDER/debian

cd $FOLDER

dpkg-buildpackage
